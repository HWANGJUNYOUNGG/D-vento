@model MvcMovie.Models.WarehouseLocationViewModel
@{
    ViewData["Title"] = "재고관리";
}

<h1>재고관리</h1>


<form asp-controller="Warehouses" asp-action="Index" method="get">
    <p>
        재고위치: <select asp-for="Warehousew_location" asp-items="Model.w_locations">
            <option value="">All</option>
        </select>
        재고품명: <input type="text" name="SearchString">
        <input type="submit" value="검색" />
        <input type="submit" asp-action="Index" value="돌아가기">
    </p>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>재고코드</th>
            <th>재고명</th>
            <th>수량</th>
            <th>창고위치</th>
            <th>수정</th>
            <th>삭제</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Warehouses)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.w_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.w_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.w_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.w_location)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.w_code">Edit</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.w_code">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" asp-controller="Warehouses" asp-action="Create">재고품목추가</a>