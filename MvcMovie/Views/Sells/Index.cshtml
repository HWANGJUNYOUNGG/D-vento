@model IEnumerable<MvcMovie.Models.Sell>

@{
    ViewData["Title"] = "Index";
}

<h1>판매관리</h1>

<form asp-controller="Sells" asp-action="Index" method="get">
    <p>
        판매품명: <input type="text" name="SearchString">
        <input type="submit" value="검색" />
        <input type="submit" asp-action="Index" value="돌아가기">
    </p>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>제품코드</th>
            <th>제품명</th>
            <th>판매날짜</th>
            <th>수량</th>
            <th>판매가격</th>
            <th>마진율</th>
            <th>수정</th>
            <th>삭제</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.s_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.s_code">Edit</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.s_code">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" asp-controller="Sells" asp-action="Create">판매품목추가</a>